{
  "name": "@avaropoint/weblisk",
  "version": "1.0.0",
  "description": "A minimal HTML-over-WebSocket framework for Deno with modular architecture",
  "license": "MIT",
  "exports": {
    ".": "./mod.ts"
  },
  "tasks": {
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test --allow-net --allow-read --allow-env tests/",
    "test:watch": "deno test --allow-net --allow-read --allow-env --watch tests/",
    "test:ci": "deno test --allow-net --allow-read --allow-env --reporter=tap tests/",
    "check": "deno check mod.ts src/**/*.ts tests/*.ts",
    "check:all": "deno check --all mod.ts src/**/*.ts tests/*.ts",
    "validate": "deno run --check mod.ts",
    "publish:dry": "deno publish --dry-run --allow-dirty",
    "publish": "deno publish"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/async": "jsr:@std/async@^1.0.14",
    "@std/path": "jsr:@std/path@^1.0.14"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2022",
      "deno.ns"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": [
      "src/",
      "tests/",
      "mod.ts"
    ],
    "exclude": [
      "README.md",
      "*.md",
      "node_modules/",
      "dist/"
    ]
  },
  "lint": {
    "include": [
      "src/",
      "tests/",
      "mod.ts"
    ],
    "exclude": [
      "node_modules/",
      "dist/"
    ]
  }
}
