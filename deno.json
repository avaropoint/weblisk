{
  "name": "@avaropoint/weblisk",
  "version": "1.0.0",
  "description": "A minimal HTML-over-WebSocket framework for Deno with modular architecture",
  "exports": {
    ".": "./mod.ts"
  },
  "tasks": {
    "dev": "WEBLISK_ENV=development deno run --allow-net --allow-read --allow-write --allow-env --watch=src/,public/ src/app.ts",
    "start": "WEBLISK_ENV=production deno run --allow-net --allow-read --allow-env src/app.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "WEBLISK_ENV=test deno test --allow-net --allow-read --allow-env tests/",
    "test:watch": "WEBLISK_ENV=test deno test --allow-net --allow-read --allow-env --watch tests/",
    "test:ci": "WEBLISK_ENV=test deno test --allow-net --allow-read --allow-env --reporter=tap tests/",
    "check": "deno check src/**/*.ts tests/*.ts",
    "build": "echo 'No build step required - Deno runs TypeScript directly'"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/async": "jsr:@std/async@^1.0.14"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2022",
      "deno.ns"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": [
      "src/",
      "tests/",
      "*.ts"
    ],
    "exclude": [
      "README.md",
      "*.md",
      "examples/",
      "node_modules/",
      "dist/"
    ]
  },
  "lint": {
    "include": [
      "src/",
      "tests/",
      "*.ts"
    ],
    "exclude": [
      "examples/",
      "node_modules/",
      "dist/"
    ]
  }
}
