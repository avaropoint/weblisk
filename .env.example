# Environment-specific configuration template
# Copy this file to .env and customize for your environment

# Server Configuration
WEBLISK_ENV=production
WEBLISK_PORT=3000
WEBLISK_HOSTNAME=0.0.0.0

# HTTPS Configuration (optional)
# WEBLISK_HTTPS=true
# WEBLISK_CERT_PATH=./certificate.crt
# WEBLISK_KEY_PATH=./private.key

# Logging Configuration
WEBLISK_LOG_LEVEL=INFO
WEBLISK_LOG_FORMAT=json
# WEBLISK_LOG_FILE=./logs/weblisk.log

# Security Configuration
WEBLISK_CORS_ENABLED=false
# WEBLISK_CORS_ORIGINS=https://example.com,https://api.example.com

# Rate Limiting (enabled by default in production)
# These values can be adjusted based on your needs
# WEBLISK_RATE_LIMIT_REQUESTS=100
# WEBLISK_RATE_LIMIT_WINDOW_MS=60000

# Monitoring and Health Checks
# WEBLISK_HEALTH_CHECK_ENABLED=true
# WEBLISK_METRICS_ENABLED=true

# Session Configuration
# WEBLISK_SESSION_COOKIE_SECURE=true  # Auto-enabled with HTTPS
# WEBLISK_SESSION_COOKIE_SAME_SITE=Strict

# Development Features (disable in production)
WEBLISK_DEBUG=false

# Additional Configuration
# Add any custom environment variables your application needs
# DATABASE_URL=postgresql://user:password@localhost:5432/mydb
# REDIS_URL=redis://localhost:6379
# EMAIL_PROVIDER_API_KEY=your-api-key
